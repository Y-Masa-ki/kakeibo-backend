{
  "compilerOptions": {
    "outDir": "./dist",        // コンパイル後の出力先
    "rootDir": "./src",        // ソースコードのルート
    "module": "commonjs",      // Node.js向けのモジュール設定
    "target": "ES2020",        // 出力するJavaScriptのバージョン
    "strict": true,            // 厳格な型チェック
    "esModuleInterop": true,   // ESモジュールとの互換性
    "skipLibCheck": true       // 型チェックをスキップ
  },
  "include": ["src/**/*"],     // 監視対象
  "exclude": ["node_modules"]  // 除外対象
}